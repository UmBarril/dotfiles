# send_notification() {
# 	if [ "$1" = "mute" ]; then ICON="mute"; elif [ "$VOLUME" -lt 33 ]; then ICON="low"; elif [ "$VOLUME" -lt 66 ]; then ICON="medium"; else ICON="high"; fi
# 	if [ "$1" = "mute" ]; then TEXT="Currently muted"; else TEXT="Currently at ${VOLUME}%"; fi
#
# 	# notify-send -a "Volume" -r 9993 -h int:value:"$VOLUME" "Volume" "$TEXT" -t 2000
#     # replace (-r) nao funciona fora do dunst por alguma razao... ---^
# 	notify-send -a "Volume" -h int:value:"$VOLUME" "Volume" "$TEXT" -t 2000 -h string:x-canonical-private-synchronous:volume-change
# }

# TODO: adicionar c√≥digo para ligar/atualiza o ledzinho de mutado (as vezes buga)
# "/sys/class/leds/platform::micmute/brightness"

case $1 in
	mute)
		case "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" in
			*MUTED* ) 
                leds mute on
                send_notification mute
                ;;
			*       ) 
                leds mute off
                send_notification
                ;;
		esac;;
	*)
		send_notification
        # canberra-gtk-play -i audio-volume-change -d "changeVolume"
        ;;
esac
